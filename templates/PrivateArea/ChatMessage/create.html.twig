
{% extends 'layout/main.html.twig' %}

{% block page_title %}
    Новое сообщение пользователю {{ user.username }}
{% endblock %}

{% block content %}

    <h1>Новое сообщение пользователю <a href="{{ path('app_private_user_view', {'id': user.id}) }}">{{ user.username }}</a></h1>
    {% if chat %}
        <h3><a href="{{ path('app_private_chat_view', {'id': chat.id}) }}">Перейти к диалогу с {{ user.username }}</a></h3>
    {% endif %}

    {{ form_start(form) }}
        <div class="invalid-feedback" style="display: block;">
            {{ form_errors(form) }}
        </div>
        <div class="form-group {% if not form.body.vars.valid %} is-invalid {% endif %}">
            {{ form_label(form.body) }}
            {{ form_widget(form.body, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.body) }}
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Отправить</button>
        </div>
    {{ form_end(form) }}

{% endblock %}
