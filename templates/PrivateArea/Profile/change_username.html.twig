
{% extends 'layout/main.html.twig' %}

{% block page_title %}
    Изменение логина
{% endblock %}

{% block content %}

    {{ form_start(form) }}
        <div class="invalid-feedback" style="display: block;">
            {{ form_errors(form) }}
        </div>
        <div class="form-group {% if not form.password.vars.valid %} is-invalid {% endif %}">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.password) }}
            </div>
        </div>
        <div class="form-group {% if not form.username.vars.valid %} is-invalid {% endif %}">
            {{ form_label(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.username) }}
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Изменить логин</button>
        </div>
    {{ form_end(form) }}

{% endblock %}