
{% extends 'layout/main.html.twig' %}

{% block page_title %}
    Профиль
{% endblock %}

{% block content %}

    <h1>{{ block('page_title') }}</h1>

    <p>
        <a href="{{ path('app_private_profile_change_username') }}" class="btn btn-primary">Изменить логин</a>
        <br>
        <br>
        <a href="{{ path('app_private_profile_change_password') }}" class="btn btn-primary">Изменить пароль</a>
