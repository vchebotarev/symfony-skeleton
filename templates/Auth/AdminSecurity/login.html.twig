
{% extends 'layout/main.html.twig' %}

{% block page_title %}
    Авторизация администратора
{% endblock %}

{% block content %}

    <h1>{{ block('page_title') }}</h1>

    <p>
        {{ form_start(form) }}
            {% if not form.vars.valid %}
                <div class="invalid-feedback" style="display: block;">
                    Ошибка авторизации
                </div>
            {% endif %}
            <div class="form-group {% if not form.vars.valid %}is-invalid{% endif %}">
                {{ form_label(form._username) }}
                {{ form_widget(form._username, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group {% if not form.vars.valid %}is-invalid{% endif %}">
                {{ form_label(form._password) }}
                {{ form_widget(form._password, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary">Войти</button>

        {{ form_end(form) }}
    </p>

{% endblock %}