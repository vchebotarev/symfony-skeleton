
{% extends '@App/layout/admin.html.twig' %}

{% block page_title %}
    Создание пользователя
{% endblock %}

{% block content %}

    {{ form_start(form) }}
        <div class="invalid-feedback" style="display: block;">
            {{ form_errors(form) }}
        </div>

        <div class="form-group {% if not form.username.vars.valid %} is-invalid {% endif %}">
            {{ form_label(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.username) }}
            </div>
        </div>

        <div class="form-group {% if not form.email.vars.valid %} is-invalid {% endif %}">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="form-group {% if not form.password.vars.valid %} is-invalid {% endif %}">
            {{ form_label(form.password.password) }}
            {{ form_widget(form.password.password, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.password.password) }}
            </div>
        </div>
        <div class="form-group {% if not form.password.vars.valid %} is-invalid {% endif %}">
            {{ form_label(form.password.password_confirm) }}
            {{ form_widget(form.password.password_confirm, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Создать пользователя</button>
    {{ form_end(form) }}

{% endblock %}
