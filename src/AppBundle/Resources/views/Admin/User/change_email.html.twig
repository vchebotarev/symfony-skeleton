
{% extends '@App/layout/admin.html.twig' %}

{% block page_title %}
    Изменение e-mail пользователя {{ user.getId() }}
{% endblock %}

{% block content %}

    {{ form_start(form) }}
        <div class="invalid-feedback" style="display: block;">
            {{ form_errors(form) }}
        </div>

        <div class="form-group {% if not form.email.vars.valid %} is-invalid {% endif %}">
            {{ form_label(form.email.email) }}
            {{ form_widget(form.email.email, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.email.email) }}
            </div>
        </div>
        <div class="form-group {% if not form.email.vars.valid %} is-invalid {% endif %}">
            {{ form_label(form.email.email_confirm) }}
            {{ form_widget(form.email.email_confirm, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Изменить</button>
    {{ form_end(form) }}

{% endblock %}
